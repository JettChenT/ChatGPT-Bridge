{
  "manifest_version": 3,
  "name": "ChatGPT Bridge",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://chat.openai.com/*"],
  "icons": {
    "48": "icon48.png"
  },
    "web_accessible_resources": [
    {
      "resources": [ "config.json", "injected-popup.js" ],
      "matches": [ "https://chat.openai.com/*" ]
    }
  ]
}
